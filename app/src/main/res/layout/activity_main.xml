                    android:text="@string/answer_8c" />

                <RadioButton
                    android:id="@+id/answer_8d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/answer_8d" />
            </RadioGroup>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:orientation="vertical" >
                <!-- Question 9 -->
                <TextView
                    style="@style/QuestionTextView"
                    android:text="@string/question_9" />

                <RadioButton
                    android:id="@+id/answer_9a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/answer_9a" />

                <RadioButton
                    android:id="@+id/answer_9b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/answer_9b" />

                <RadioButton
                    android:id="@+id/answer_9c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/answer_9c" />

                <RadioButton
                    android:id="@+id/answer_9d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/answer_9d" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:onClick="submitAnswers"
                    android:text="@string/submit" />

            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
</ScrollView>