<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.example.android.canyoucook.MainActivity">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/cooking_banner" />

        <TextView
            android:id="@+id/welcome_text"
            style="@style/HeaderText"
            android:layout_below="@+id/image_view"
            android:text="@string/welcome" />

        <LinearLayout
            android:id="@+id/contentGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcome_text"
            android:orientation="vertical">

            <EditText
                android:id="@+id/your_name_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:hint="@string/your_name"
                android:inputType="text" />

            <EditText
                android:id="@+id/favorite_dish_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/your_name_view"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:hint="@string/your_dish"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/quiz_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contentGroup"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/group_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:orientation="vertical">

                <TextView
                    style="@style/QuestionTextView"
                    android:text="@string/question_1" />

                <RadioButton
                    android:id="@+id/answer_1a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/answer_1a" />

                <RadioButton
                    android:id="@+id/answer_1b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/answer_1b" />

                <RadioButton
                    android:id="@+id/answer_1c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/answer_1c" />

                <RadioButton
                    android:id="@+id/answer_1d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/answer_1d" />
            </RadioGroup>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:orientation="vertical" >
                <!-- Question 2 -->
                <TextView
                    style="@style/QuestionTextView"
                    android:text="@string/question_2" />

                <RadioButton
                    android:id="@+id/answer_2a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/answer_2a" />

                <RadioButton
                    android:id="@+id/answer_2b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/answer_2b" />

                <RadioButton
                    android:id="@+id/answer_2c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/answer_2c" />

                <RadioButton
                    android:id="@+id/answer_2d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/answer_2d" />
            </RadioGroup>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:orientation="vertical">
                <!-- Question 3 -->
                <TextView
                    style="@style/QuestionTextView"
                    android:text="@string/question_3" />

                <RadioButton
                    android:id="@+id/answer_3a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/answer_3a" />

                <RadioButton
                    android:id="@+id/answer_3b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/answer_3b" />

                <RadioButton
                    android:id="@+id/answer_3c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/answer_3c" />

                <RadioButton
                    android:id="@+id/answer_3d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/answer_3d" />
            </RadioGroup>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:orientation="vertical" >

                <!-- Question 4 -->
                <TextView
